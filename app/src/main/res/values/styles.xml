<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Widget.Rpg.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Rpg.Toolbar</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="subtitleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_item_title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_ability_label" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_ability_value" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_card_header" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_card_subtitle" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/card_spell_outline</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/card_spell_background</item>
    </style>

    <style name="text_card_label" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_card_spellbook</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">@dimen/ui_templates_spacing_small</item>
        <item name="android:paddingEnd">@dimen/ui_templates_spacing_small</item>
        <item name="android:paddingTop">@dimen/ui_templates_spacing_small</item>
    </style>

    <style name="text_card_value" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">@dimen/ui_templates_spacing_small</item>
        <item name="android:paddingEnd">@dimen/ui_templates_spacing_small</item>
        <item name="android:paddingBottom">@dimen/ui_templates_spacing_small</item>
    </style>

    <style name="text_card_details" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/ui_templates_spacing_medium</item>
        <item name="android:background">@color/card_spell_background</item>
    </style>

    <style name="text_card_content" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">350sp</item>
        <item name="android:padding">@dimen/ui_templates_spacing_medium</item>
        <item name="android:background">@color/card_spell_background</item>
    </style>

</resources>
